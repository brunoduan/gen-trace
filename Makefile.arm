CFLAGS := -O0 -g -Wall -I. -fPIC -fvisibility=hidden

LDFLAGS := -pie
LDLIBS := -lpthread -lrt
CC=arm-linux-androideabi-gcc
CXX=arm-linux-androideabi-gcc

-include $(OBJS:.o=.d)

%.o: %.c
	$(CC) $(CFLAGS) -c $*.c -o $*.o
	$(CC) -MM $(CFLAGS) $*.c > $*.d

%.o: %.cpp
	$(CXX) $(CFLAGS) -c $*.cpp -o $*.o
	$(CXX) -MM $(CFLAGS) $*.cpp > $*.d

%.o: %.S
	$(CXX) $(CFLAGS) -c $*.S -o $*.o
	$(CXX) -MM $(CFLAGS) $*.S > $*.d

